{
    "version": 2,
    "builds": [
      {
        "src": "vite.config.js",
        "use": "@vercel/node",
        "config": {
          "maxLambdaSize": "1024mb"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/.*",
        "dest": "api/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "public/$1"
      }
    ]
  }
  